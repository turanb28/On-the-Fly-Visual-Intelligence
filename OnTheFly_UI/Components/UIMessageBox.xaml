<Window x:Class="OnTheFly_UI.Components.UIMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnTheFly_UI.Components"
        mc:Ignorable="d"
        Title="UIMessageBox" Height="300" Width="480"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource Background_Dark}"
        WindowStyle="None"
        MouseDown="Window_MouseDown"
        Topmost="True"
        >
    <Window.Resources>
        <Style TargetType="Path" x:Key="svg">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Fill" Value="{DynamicResource Foreground_Light}"/>
            <Setter Property="Margin" Value="20"/>
        </Style>
    </Window.Resources>
