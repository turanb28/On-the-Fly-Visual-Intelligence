<Window x:Class="OnTheFly_UI.Components.UIUserEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnTheFly_UI.Components"
        mc:Ignorable="d"
        Title="UIUserEntry" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource Background_Dark}"
        WindowStyle="None"
        MouseDown="Window_MouseDown"
        Topmost="True"  >
    <Window.Resources>
        <Style TargetType="Path" x:Key="svg">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Setter Property="Fill" Value="{DynamicResource Foreground_Light}"/>
            <Setter Property="Margin" Value="20"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="36px"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="36px"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="36px"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="close_button"  Grid.Row="0" Grid.Column="2" Content="&#x274C;" FontSize="10" Width="36" Background="Transparent" Foreground="{DynamicResource Foreground_Light}" BorderThickness="0" Height="36" HorizontalAlignment="Center" VerticalAlignment="Center" Click="close_button_Click"/>
        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"  Text="{Binding Message}"  Foreground="{DynamicResource Foreground_Light }" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
            <TextBox x:Name="entry" Grid.Row="1"  Grid.ColumnSpan="2" Width="700" Background="{DynamicResource Background_Light}" Foreground="{DynamicResource Foreground_Light}" 
                BorderBrush="{DynamicResource Foreground_Light}" BorderThickness="1" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" HorizontalContentAlignment="Center"  VerticalContentAlignment="Center"></TextBox>
            
            
            <Grid Grid.Row="2" Height="40" Width="{Binding ElementName=entry, Path=ActualWidth}" HorizontalAlignment="Stretch"   >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" x:Name="okButton" Click="okButton_Click" Content="Ok" Background="{DynamicResource Background_Dark}" Foreground="{DynamicResource Foreground_Light}" BorderBrush="{DynamicResource Foreground_Light}" FontSize="24"></Button>
                <Button Grid.Column="3" x:Name="cancelButton" Click="close_button_Click" Content="Cancel" Background="{DynamicResource Background_Dark}" Foreground="{DynamicResource Foreground_Light}" BorderBrush="{DynamicResource Foreground_Light}"  FontSize="24"></Button>
                
            </Grid>
            
            
            
        </Grid>
    </Grid>
</Window>
